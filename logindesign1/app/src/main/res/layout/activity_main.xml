<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/logoofapp"
        android:layout_marginTop="65dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textColor="#3E3D3D"
        android:textStyle="normal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Your Account"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="4dp"
        />

    <EditText
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:hint="Username"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/stroke"
        android:paddingLeft="12dp"
        android:drawableStart="@drawable/baseline_account_circle_60"/>

    <EditText
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:hint="   Email"
        android:inputType="textWebEmailAddress"

        android:layout_marginLeft="60dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/stroke"
        android:paddingLeft="12dp"
        android:drawableStart="@drawable/baseline_email_2424"/>

    <EditText
    android:layout_width="280dp"
    android:layout_height="45dp"
    android:hint="   Email"
    android:inputType="textWebPassword"

    android:layout_marginLeft="60dp"
    android:layout_marginTop="26dp"
    android:background="@drawable/stroke"
    android:paddingLeft="12dp"
    android:drawableStart="@drawable/baseline_vpn_key_24"    />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="138dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/skyblue"
        android:text="Sign up"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/stroke1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or sign up with"
        android:textSize="16dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/skyblue"
        
        />
</LinearLayout>