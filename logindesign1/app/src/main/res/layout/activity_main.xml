<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imgstroke"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/logoofapp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Welcome!"
        android:textAlignment="center"
        android:textColor="#3E3D3D"
        android:textSize="30dp"
        android:textStyle="normal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:text="Create Your Account"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/stroke"
        android:drawableStart="@drawable/baseline_account_circle_24"
        android:hint="   Username"
        android:paddingLeft="12dp" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="26dp"

        android:background="@drawable/stroke"
        android:drawableStart="@drawable/baseline_email_2424"
        android:hint="   Email"
        android:inputType="textWebEmailAddress"
        android:paddingLeft="12dp" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="26dp"

        android:background="@drawable/stroke"
        android:drawableStart="@drawable/baseline_vpn_key_24"
        android:hint="   Password"
        android:inputType="textWebPassword"
        android:paddingLeft="12dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="138dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/stroke1"
        android:backgroundTint="@color/skyblue"
        android:text="Sign up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="41dp"
            android:layout_weight="1"
            android:background="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:text="Or sign up with"
            android:textColor="@color/black"
            android:textSize="16dp"

            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"
            android:background="@color/black" />


    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="90dp"
        android:src="@drawable/googlelogo"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/facebooklogo"
        android:backgroundTint="@color/white"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/twitter_logo"
        android:background="@color/white"/>

    </LinearLayout>

</LinearLayout>