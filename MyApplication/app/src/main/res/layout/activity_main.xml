<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#F0ECE8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="facebook"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="#0B48EF"
       />



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:padding="5dp"
            android:hint="Mobile number or email address"
            android:textSize="19dp"
            android:inputType=""

            />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:padding="5dp"

        android:inputType="textPassword"
        android:hint="Password"
        android:textSize="19dp"

       />

    <Button
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Log In"
        android:textSize="17dp"
        android:backgroundTint="#0B48EF"

        />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="forget password?"
         android:layout_gravity="center"
         android:layout_marginTop="10dp"
         android:textColor="#0091EA"
         android:textSize="15dp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:text="or"
            android:textSize="18dp"

            android:gravity="center"
            android:layout_marginTop="15dp"/>


    </LinearLayout>


    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Create New Account"
        android:textSize="17dp"
        android:backgroundTint="#4BBD01"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="80dp"
            android:text="About"
            android:textSize="12dp"
            android:backgroundTint="#F0ECE8"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:layout_marginTop="70dp"

            android:text="Help"
            android:textSize="12dp"
            android:backgroundTint="#F0ECE8"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:layout_marginTop="70dp"

            android:text="More"
            android:textSize="12dp"
            android:backgroundTint="#F0ECE8"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meta 2024"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="12dp"
        android:textSize="15dp"

        />


</LinearLayout>